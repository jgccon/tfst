    <h1 class="text-3xl font-bold mb-6 text-center">{t(locale, 'features.title')}</h1>
    <p class="text-lg text-gray-700 mb-8 text-center">{t(locale, 'features.intro')}</p>

    <div class="grid md:grid-cols-2 gap-8">
      <div class="p-6 border rounded-lg bg-white shadow hover:shadow-md transition">
        <h2 class="text-xl font-semibold mb-2">{t(locale, 'features.hr.title')}</h2>
        <p class="text-gray-700">{t(locale, 'features.hr.description')}</p>
      </div>
      <div class="p-6 border rounded-lg bg-white shadow hover:shadow-md transition">
        <h2 class="text-xl font-semibold mb-2">{t(locale, 'features.billing.title')}</h2>
        <p class="text-gray-700">{t(locale, 'features.billing.description')}</p>
      </div>
      <div class="p-6 border rounded-lg bg-white shadow hover:shadow-md transition">
        <h2 class="text-xl font-semibold mb-2">{t(locale, 'features.contracts.title')}</h2>
        <p class="text-gray-700">{t(locale, 'features.contracts.description')}</p>
      </div>
      <div class="p-6 border rounded-lg bg-white shadow hover:shadow-md transition">
        <h2 class="text-xl font-semibold mb-2">{t(locale, 'features.escrow.title')}</h2>
        <p class="text-gray-700">{t(locale, 'features.escrow.description')}</p>
      </div>
    </div>
  </section>
</BaseLayout>
