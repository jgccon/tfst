---
import { t, defaultLocale, type Locale } from '../i18n.ts';
const { lang = defaultLocale } = Astro.props;
const locale = lang as Locale;
---

<footer class="bg-gray-50 border-t py-10 text-sm text-gray-600">
  <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between gap-8">

    <!-- Block 1: Info & Attribution -->
    <div class="md:w-1/3 space-y-2 text-center md:text-left">
      <p class="font-semibold text-gray-800">TFST – The Full Stack Team</p>
      <p>© {new Date().getFullYear()} {t(locale, 'footer.rights')}</p>
      <p>
        {t(locale, 'footer.poweredBy')}{' '}
        <a href="https://github.com/jgccon/tfst/graphs/contributors" class="underline hover:text-blue-600">
          {t(locale, 'footer.contributors')}
        </a>
      </p>
    </div>

    <!-- Block 2: Navigation Links -->
    <div class="md:w-1/3 text-center space-y-2">
      <div class="flex flex-col sm:flex-row sm:justify-center gap-2">
        <a href={`/${lang}/community`} class="hover:underline hover:text-blue-600">
          {t(locale, 'footer.community')}
        </a>
        <a href="https://tfst.dev" target="_blank" class="hover:underline hover:text-blue-600">
          {t(locale, 'footer.docs')}
        </a>
        <a href={`/${lang}/contribute`} class="hover:underline hover:text-blue-600">
          {t(locale, 'footer.contribute')}
        </a>
      </div>
      <div class="flex flex-col sm:flex-row sm:justify-center gap-2 text-gray-500 text-xs">
        <a href={`/${lang}/privacy`} class="hover:underline">{t(locale, 'footer.privacy')}</a>
        <a href={`/${lang}/terms`} class="hover:underline">{t(locale, 'footer.terms')}</a>
        <a href={`/${lang}/imprint`} class="hover:underline">{t(locale, 'footer.imprint')}</a>
      </div>
    </div>

    <!-- Block 3: CTA -->
    <div class="md:w-1/3 text-center md:text-right space-y-2">
      <p>{t(locale, 'footer.ctaText')}</p>
      <a
        href={`/${lang}/join`}
        class="inline-block mt-1 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
      >
        {t(locale, 'footer.ctaButton')}
      </a>
    </div>

  </div>
</footer>
