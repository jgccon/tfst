---
import { t } from '../i18n.ts';

const { locale } = Astro.props;
---

<section class="mt-16">
  <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">{t(locale, "roadmap.title")}</h2>

  <div class="grid md:grid-cols-2 gap-8">
    <div>
      <h3 class="text-xl font-semibold text-blue-700 mb-2">{t(locale, "roadmap.mvpTitle")}</h3>
      <ul class="list-disc list-inside text-gray-700 space-y-2">
        <li>{t(locale, "roadmap.mvp.registration")}</li>
        <li>{t(locale, "roadmap.mvp.profiles")}</li>
        <li>{t(locale, "roadmap.mvp.contracts")}</li>
      </ul>
    </div>

    <div>
      <h3 class="text-xl font-semibold text-blue-700 mb-2">{t(locale, "roadmap.phase2Title")}</h3>
      <ul class="list-disc list-inside text-gray-700 space-y-2">
        <li>{t(locale, "roadmap.phase2.projects")}</li>
        <li>{t(locale, "roadmap.phase2.reputation")}</li>
        <li>{t(locale, "roadmap.phase2.marketplace")}</li>
      </ul>
    </div>
  </div>

  <div class="mt-12">
    <h3 class="text-xl font-semibold text-red-600 mb-2">{t(locale, "roadmap.challengesTitle")}</h3>
    <ul class="list-disc list-inside text-gray-700 space-y-2">
      <li>{t(locale, "roadmap.challenges.scalability")}</li>
      <li>{t(locale, "roadmap.challenges.security")}</li>
      <li>{t(locale, "roadmap.challenges.ux")}</li>
    </ul>
  </div>
</section>
