---
// src/components/DeveloperHero.astro
import { t } from "../i18n";
const { locale } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 py-24 text-center">
  <h1 class="text-4xl md:text-5xl font-bold mb-6">
    {t(locale, "forDevelopers.heroTitle")}
  </h1>
  <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
    {t(locale, "forDevelopers.heroSubtitle")}
  </p>
  <a
    href="/auth/register"
    class="inline-block bg-black text-white px-8 py-3 rounded-lg shadow hover:bg-gray-800 transition"
  >
    {t(locale, "forDevelopers.cta")}
  </a>
</section>
