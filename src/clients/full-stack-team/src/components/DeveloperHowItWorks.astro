---
// src/components/DeveloperHowItWorks.astro
import { t } from "../i18n";
const { locale } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 py-20">
  <header class="text-center mb-16">
    <h2 class="text-3xl font-bold mb-4">
      {t(locale, "forDevelopers.howItWorksTitle")}
    </h2>
    <p class="text-gray-700 text-lg">
      {t(locale, "forDevelopers.howItWorksSubtitle")}
    </p>
  </header>

  <ol class="space-y-12 text-left">
    <li>
      <h3 class="text-xl font-semibold mb-1">1️⃣ {t(locale, "forDevelopers.step1Title")}</h3>
      <p class="text-gray-600">{t(locale, "forDevelopers.step1Desc")}</p>
    </li>
    <li>
      <h3 class="text-xl font-semibold mb-1">2️⃣ {t(locale, "forDevelopers.step2Title")}</h3>
      <p class="text-gray-600">{t(locale, "forDevelopers.step2Desc")}</p>
    </li>
    <li>
      <h3 class="text-xl font-semibold mb-1">3️⃣ {t(locale, "forDevelopers.step3Title")}</h3>
      <p class="text-gray-600">{t(locale, "forDevelopers.step3Desc")}</p>
    </li>
    <li>
      <h3 class="text-xl font-semibold mb-1">4️⃣ {t(locale, "forDevelopers.step4Title")}</h3>
      <p class="text-gray-600">{t(locale, "forDevelopers.step4Desc")}</p>
    </li>
  </ol>
</section>
