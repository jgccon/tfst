{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "${SEQ_SERVER_URL}",
          "apiKey": "${SEQ_API_KEY}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithCorrelationId", "WithProperty" ],
    "Properties": {
      "ServiceName": "TheFullStackTeam.API"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "Key": "",
    "Issuer": "TheFullStackTeam",
    "Audience": "TheFullStackTeamUsers"
  },
  "FeatureFlags": {
    "MigrateAtStartup": true,
    "MessagingProvider": "RabbitMQ",
    "SecretsProvider": "azurekeyvault"
  },
  "MongoDbSettings": {
    "ConnectionString": "",
    "DatabaseName": "TheFullStackTeamDatabase"
  },
  "RabbitMQSettings": {
    "HostName": "",
    "UserName": "",
    "Password": "",
    "QueueName": "",
    "ExchangeName": "events_exchange",
    "RoutingKey": "events.routingkey"
  },
  "AdminSettings": {
    "Email": "",
    "Password": "",
    "FirstName": "",
    "LastName": "",
    "Roles": []
  }
}
